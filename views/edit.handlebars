<h1 class="restaurant-show-title">加入新餐廳</h1>
<div class="container">
  <form action="/restaurants/{{restaurant._id}}/edit" method="post">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">

        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary" for="name">
            <i class="fas fa-store pr-2"></i>
            店名：
          </label>
          <input type="text" name="name" class="form-control col-sm-10" id="name" value="{{restaurant.name}}">
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary" for="category">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </label>
          <input type="text" name="category" class="form-control col-sm-10" id="category" value="{{restaurant.category}}">
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary" for="image">
            <i class="fas fa-images pr-2"></i>
            照片：
          </label>
          <input type="text" name="image" class="form-control col-sm-10" id="image" value="{{restaurant.image}}">
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary" for="location">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </label>
          <input type="text" name="location" class="form-control col-sm-10" id="location" value="{{restaurant.location}}">
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary" for="phone">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </label>
          <input type="text" name="phone" class="form-control col-sm-10" id="phone" value="{{restaurant.phone}}">
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary" for="google_map">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
            地圖：
          </label>
          <input type="text" name="google_map" class="form-control col-sm-10" id="google_map" value="{{restaurant.google_map}}">
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary" for="rating">
            <i class="fas fa-star pr-2 fa-xs"></i>
            評分：
          </label>
          <input type="text" name="rating" class="form-control col-sm-10" id="rating" value="{{restaurant.rating}}">
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary" for="description">
            <i class="fas fa-comment pr-2"></i>
            簡介：
          </label>
          <textarea type="textarea" name="description" class="form-control col-sm-10" id="description" rows="3">{{restaurant.description}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary  my-5">送出</button>
      </div>
    </form>
  </div>
</div>