<h1 class="restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="col-10 mx-auto">
    <form action="/restaurants/{{restaurant._id}}?_method=put" method="post" class="row justify-content-end">
      <div class="row mb-3">
        <label class="col-2 col-form-label text-muted" for="name">
          <i class="fas fa-store pr-2"></i>
          *店名：
        </label>
        <div class="col-10">
          <input type="text" name="name" class="form-control col-10" id="name" value="{{restaurant.name}}" required>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-2 col-form-label text-muted" for="category">
          <i class="fas fa-utensils pr-2"></i>
          *類別：
        </label>
        <div class="col-10">
          <input type="text" name="category" class="form-control col-10" id="category" value="{{restaurant.category}}" required>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-2 col-form-label text-muted" for="image">
          <i class="fas fa-images pr-2"></i>
          *照片：
        </label>
        <div class="col-10">
          <input type="text" name="image" class="form-control col-10" id="image" value="{{restaurant.image}}" required>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-2 col-form-label text-muted" for="location">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </label>
        <div class="col-10">
          <input type="text" name="location" class="form-control col-10" id="location" value="{{restaurant.location}}">
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-2 col-form-label text-muted" for="phone">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </label>
        <div class="col-10">
          <input type="text" name="phone" class="form-control col-10" id="phone" value="{{restaurant.phone}}">
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-2 col-form-label text-muted" for="google_map">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          地圖：
        </label>
        <div class="col-10">
          <input type="text" name="googleMap" class="form-control col-10" id="google_map" value="{{restaurant.google_map}}">
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-2 col-form-label text-muted" for="rating">
          <i class="fas fa-star pr-2 fa-xs"></i>
          *評分：
        </label>
        <div class="col-10">
          <input type="number" name="rating" class="form-control col-10" id="rating" min="0" max="5" step="0.1" value="{{restaurant.rating}}" required>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-2 col-form-label text-muted" for="description">
          <i class="fas fa-comment pr-2"></i>
          簡介：
        </label>
        <div class="col-10">
          <textarea type="textarea" name="description" class="form-control col-10" id="description" rows="3">{{restaurant.description}}</textarea>
        </div>
      </div>
      <button type="submit" class="btn btn-primary col-3 m-3">提交</button>
    </form>
  </div>
</div>
